@page "/Students/AddNewStudent"
<PageTitle>Students - Add New Student </PageTitle>
<div class="top-row px-5 mb-4">
    <h4 class="nav_item_h">Add New Student</h4>
</div>
<div class="new_page" style=" ">

    <div class="px-5 mt ">
        <div class="div_student_detail1 ">
            <p class="m-4" style="color:white; margin:0;">Student Details</p>
        </div>
        <div class="div_student_detail2 d-flex justify-content-center ">
            <div class="m-4">
                <p>Photo *</p>
                <div class="" style="width:140px; height:140px; border: 1px dashed #4D44B5;">
                    @*<p>Drag and drop or click here to select file</p>*@
                </div>
            </div>
            <div style="width: 35%;" class="m-4">
                <div class="">
                    <label class="form-label">First Name *</label>
                    <input type="text" class="form-control" id="form_First_Name"  required>
                </div>
                <div class="mt-3">
                    <label class="form-label">Date of Birth * </label>
                    <input type="date" class="form-control" @bind="birthDate" @bind:event="oninput" id="form_Date" required>
                </div>
                <div class="mt-3">
                    <label class="form-label">Email * </label>
                    <input type="email" class="form-control" id="form_email"  required>
                </div>
                <div class="mt-3">
                    <label for="form_address" class="form-label">Address *</label>
                    <textarea class="form-control" id="form_address" rows="4" ></textarea>
                </div>
            </div>
            <div style="width: 35%;" class="m-4">
                <div class="">
                    <label class="form-label">Last Name *</label>
                    <input type="text" class="form-control" id="form_Last_Name"  required>
                </div>
                <div class="mt-3">
                    <label class="form-label">Parent Name * </label>
                    <input type="text" class="form-control" id="form_Parent_Name"  required>
                </div>
                <div class="mt-3">
                    <label class="form-label">Phone * </label>
                    <input type="number" class="form-control" id="form_Phone"  required>
                </div>

            </div>
        </div>
    </div>





    <div class="px-5 mt-5 mb-5">
        <div class="div_student_detail1 ">
            <p class="m-4" style="color:white; margin:0;">Parent Details</p>
        </div>
        <div class="div_student_detail2 d-flex justify-content-center">
            <div style="width: 40%;" class="m-4">
                <div class="">
                    <label class="form-label">First Name *</label>
                    <input type="text" class="form-control" id="form_First_Name"  required>
                </div>             
                <div class="mt-3">
                    <label class="form-label">Email * </label>
                    <input type="email" class="form-control" id="form_email" required>
                </div>
                <div class="mt-3">
                    <label for="form_address" class="form-label">Address *</label>
                    <textarea class="form-control" id="form_address" rows="4" ></textarea>
                </div>
            </div>
            <div style="width: 40%;" class="m-4">
                <div class="">
                    <label class="form-label">Last Name *</label>
                    <input type="text" class="form-control" id="form_Last_Name"  required>
                </div>           
                <div class="mt-3">
                    <label class="form-label">Phone * </label>
                    <input type="number" class="form-control" id="form_Phone" required>
                </div>
                <div class="mt-3">
                    <p class="form-label">Payments * </p>
                    <div class="d-flex">
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Cash
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Debit
                            </label>
                        </div>
                    </div>
                   
                </div>

            </div>
        </div>
    </div>


    <div class="d-flex px-5 mb-4 justify-content-end">
        <div class="btn-group me-4">
            <button type="button" class="btn btn_save_draft" >
               Save as Draft
            </button>
            
        </div>
        <div class="btn-group me-4">
            <button type="submit" class="btn btn_submit">
               Submit
            </button>
        </div>

    </div>
</div>


